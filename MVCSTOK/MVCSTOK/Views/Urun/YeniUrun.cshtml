@using MVCSTOK.Models.Entity
@model MVCSTOK.Models.Entity.TBLURUN
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı</label>
        <input class="form-control" name="URUNAD" type="text" required="" />
    </div>
    <br />
    <div>
        <label>Marka </label>
        <input class="form-control" name="MARKA" type="text" required="" />
    </div>
    <br />
    <div>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(m => m.TBLKATEGORİLER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <br />
    <div>
        <label>Ürün Fiyatı</label>
        <input class="form-control" name="URUNFIYAT" type="text" required="" />
    </div>
    <br />
    <div>
        <label>Ürün Stoğu</label>
        <input class="form-control" name="STOK" type="text" />
    </div>
    <br />
    <div>
        <button class="btn btn-info" id="btn1">Ürün Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert('Ürün Eklendi');
        });
    </script>

</form>

