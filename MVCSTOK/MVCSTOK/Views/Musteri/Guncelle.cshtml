@model MVCSTOK.Models.Entity.TBLMUSTERI
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("MusteriGuncelle", "Musteri", FormMethod.Post))

{
    <div class="form-group">
        @Html.LabelFor(m => m.MUSTERIID, "Müşteri Id", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.MUSTERIID, new { @class = "form-control", @readonly = true })
        <br />
        @Html.LabelFor(m => m.MUSTERIAD, "Müşteri Adı", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.MUSTERIAD, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.MUSTERISOYAD, "Müşteri Soyadı", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.MUSTERISOYAD, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-success" id="btn">Güncelle</button>
    </div>
    <script>
        $("#btn").click(function () {
            alert('Müşteri Güncellenmiştir.');
        });
    </script>
}

