@using MVCSTOK.Models.Entity
@model MVCSTOK.Models.Entity.TBLMUSTERI
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <br />
        <label>Müşteri Adı</label>
        <input class="form-control" name="MUSTERIAD" type="text" required="" maxlength="30" />
        @Html.ValidationMessageFor(m => m.MUSTERIAD, "", new { @style = "color:red" })
        <br />
        <label>Müşteri Soyadı</label>
        <input class="form-control" name="MUSTERISOYAD" type="text" required="" maxlength="30" />
        @Html.ValidationMessageFor(m => m.MUSTERISOYAD, "", new { @style = "color:red" })
    </div>
    <br />
    <div>
        <button class="btn btn-info" id="btn1">Müşteri Ekle</button>
    </div>
    <script>
        $("#btn1").click(function () {
            alert('Müşteri Eklenmiştir.');
        });
    </script>
</form>

