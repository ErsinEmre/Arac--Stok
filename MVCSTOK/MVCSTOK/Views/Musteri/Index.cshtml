@using MVCSTOK.Models.Entity
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<TBLMUSTERI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<table class="table table-hover">
    <tr>
        <th>Müşteri ID</th>
        <th>Müşteri Adı</th>
        @*<th>Sil</th>*@
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    <tbody>
        @foreach (var musteri in Model)
        {
            <tr>
                <th>@musteri.MUSTERIID</th>
                <td>@musteri.MUSTERIAD @musteri.MUSTERISOYAD</td>
                @*<td><a href="/Musteri/Sil/@musteri.MUSTERIID" class="btn btn-danger">SİL</a></td>*@
                <td><a href="/Musteri/Guncelle/@musteri.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>
                <td>@Html.ActionLink("Sil", "Sil", new { id = musteri.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Silmek İstiyor Musunuz?')" })</td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Musteri/YeniMusteri/" class="btn btn-info">Yeni Müşteri Ekle</a>

